{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "IF Node Schema",
  "description": "Schema for n8n IF node validation",
  "required": ["id", "name", "type", "typeVersion", "position", "parameters"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the node"
    },
    "name": {
      "type": "string",
      "description": "Display name of the node"
    },
    "type": {
      "type": "string",
      "enum": ["n8n-nodes-base.if"],
      "description": "Node type identifier"
    },
    "typeVersion": {
      "type": "number",
      "description": "Version of the node type"
    },
    "position": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Position coordinates [x, y]"
    },
    "parameters": {
      "type": "object",
      "required": ["conditions"],
      "properties": {
        "conditions": {
          "type": "object",
          "required": ["options"],
          "properties": {
            "options": {
              "type": "object",
              "required": [
                "caseSensitive",
                "leftValue",
                "rightValue",
                "operation"
              ],
              "properties": {
                "caseSensitive": {
                  "type": "boolean",
                  "description": "Whether comparison is case sensitive"
                },
                "leftValue": {
                  "type": "string",
                  "description": "Left side value for comparison"
                },
                "rightValue": {
                  "type": "string",
                  "description": "Right side value for comparison"
                },
                "operation": {
                  "type": "string",
                  "enum": [
                    "equal",
                    "notEqual",
                    "contains",
                    "notContains",
                    "regex",
                    "notRegex",
                    "larger",
                    "smaller",
                    "largerEqual",
                    "smallerEqual",
                    "startsWith",
                    "notStartsWith",
                    "endsWith",
                    "notEndsWith",
                    "isEmpty",
                    "isNotEmpty"
                  ],
                  "description": "Comparison operation"
                }
              }
            }
          }
        },
        "options": {
          "type": "object",
          "description": "Additional options"
        }
      }
    },
    "disabled": {
      "type": "boolean",
      "description": "Whether the node is disabled"
    },
    "notes": {
      "type": "string",
      "description": "Notes about the node"
    },
    "continueOnFail": {
      "type": "boolean",
      "description": "Whether to continue execution if this node fails"
    },
    "alwaysOutputData": {
      "type": "boolean",
      "description": "Whether to always output data even on failure"
    },
    "executeOnce": {
      "type": "boolean",
      "description": "Whether to execute only once"
    },
    "retryOnFail": {
      "type": "boolean",
      "description": "Whether to retry on failure"
    },
    "maxTries": {
      "type": "number",
      "minimum": 1,
      "description": "Maximum number of retry attempts"
    },
    "waitBetweenTries": {
      "type": "number",
      "minimum": 0,
      "description": "Wait time between retries in milliseconds"
    }
  }
}
